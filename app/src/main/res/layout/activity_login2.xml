<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FA8C2C"
    tools:context=".Login">


    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="68dp"
        android:padding="15dp"
        android:text="Log in "
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/email_address1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="451dp"
        android:background="@drawable/text"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:text="Email address"
        android:textColorHint="@color/black"
        android:textSize="20dp"></>

    <EditText
        android:id="@+id/password"
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="384dp"
        android:background="@drawable/text"
        android:drawableLeft="@drawable/ic_lock"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:padding="10dp"
        android:textColorHint="@color/black"
        android:textSize="20dp"></>

    <android.widget.Button
        android:id="@+id/submit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="302dp"
        android:background="@drawable/input_bg"
        android:paddingTop="20dp"
        android:text="Submit"
        android:textColor="@color/black"
        android:textSize="25dp"></android.widget.Button>

    <TextView
        android:id="@+id/forget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="160dp"
        android:layout_marginBottom="240dp"
        android:text="Forget Password?"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/forget_p"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="198dp"
        android:text="Enter your email address to receive a recovery link"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/email_address2"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="122dp"
        android:background="@drawable/text"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:text="Email address"
        android:textColorHint="@color/black"
        android:textSize="20dp"></>

    <android.widget.Button
        android:id="@+id/submit3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/input_bg"
        android:paddingTop="20dp"
        android:text="Submit"
        android:textColor="@color/black"
        android:textSize="25dp"></android.widget.Button>
</RelativeLayout>